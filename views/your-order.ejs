
<%- include ('header')%>


<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order =>{ %>
                                <% order.mycart.product.forEach(element =>{ %>
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="../<%= element.img%>" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        <%=element.name%>
                                    </a>
                                </td>
                                <td class="price-pr">
                                    <p><%=element.price%></p>
                                </td>
                                <td class="quantity-box"><input type="number" size="4" value="<%=element.quantity%>" min="0" step="1" class="c-input-text qty text"></td>
                                <td class="total-pr">
                                    <p>$<%= element.price*element.quantity %></p>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                <i class="fas fa-times"></i>
                            </a>
                                </td>
                            </tr>
                                <%})%>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('footer')%>
